<div class="newsletter">
  <div class="newsletter__container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}

    {% form 'customer' %}
      <input type="email" placeholder="{{ section.settings.placeholder }}" />
      <button type="submit">{{ section.settings.button_text }}</button>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "t:names.newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "Subscribe to Our Newsletter"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:settings.button_text",
      "default": "Subscribe"
    },
    {
      "type": "liquid",
      "id": "success_message",
      "label": "Success Message",
      "default": "<p>Thanks for subscribing!</p>"
    },
    {
      "type": "checkbox",
      "id": "show_name_field",
      "label": "Show Name Field",
      "default": false
    },
    {
      "type": "article",
      "id": "privacy_policy",
      "label": "Privacy Policy Page"
    },
    {
      "type": "page",
      "id": "terms_page",
      "label": "Terms & Conditions Page"
    },
    {
      "type": "product",
      "id": "featured_product",
      "label": "Featured Product (optional)"
    },
    {
      "type": "product_list",
      "id": "product_recommendations",
      "label": "Product Recommendations"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Related Blog"
    },
    {
      "type": "header",
      "content": "t:content.colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-3"
    },
    {
      "type": "header",
      "content": "t:content.spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:settings.top_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:settings.bottom_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

