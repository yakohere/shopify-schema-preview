<div class="hero-banner {% if section.settings.enable_parallax %}hero-banner--parallax{% endif %}">
  <div class="hero-banner__image-wrapper">
    {% if section.settings.hero_image %}
      {{ section.settings.hero_image | image_url: width: 1920 | image_tag }}
    {% endif %}
    <div class="hero-banner__overlay" style="opacity: {{ section.settings.overlay_opacity }}%;"></div>
  </div>

  <div class="hero-banner__content hero-banner__content--{{ section.settings.text_alignment }}">
    {% if section.settings.heading != blank %}
      <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="hero-banner__subheading">{{ section.settings.subheading }}</p>
    {% endif %}
    
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-banner__button">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "t:names.hero_banner",
  "settings": [
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "t:settings.subheading",
      "default": "Discover amazing products at great prices",
      "placeholder": "Enter your subheading text..."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:settings.button_text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:settings.button_link"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "t:settings.image"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "t:settings.video_url",
      "accept": ["youtube", "vimeo"],
      "placeholder": "https://www.youtube.com/watch?v=..."
    },
    {
      "type": "header",
      "content": "t:content.typography"
    },
    {
      "type": "radio",
      "id": "text_alignment",
      "label": "t:settings.text_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "center",
          "label": "t:options.center"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "t:content.colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color_background",
      "id": "background_color",
      "label": "Background Color",
      "default": "linear-gradient(#000000, #333333)"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "t:settings.overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 30,
      "info": "t:info.overlay_opacity"
    },
    {
      "type": "header",
      "content": "t:content.animation"
    },
    {
      "type": "checkbox",
      "id": "enable_parallax",
      "label": "t:settings.enable_parallax",
      "default": false,
      "info": "t:info.parallax_effect"
    },
    {
      "type": "select",
      "id": "animation_type",
      "label": "Animation Type",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "fade",
          "label": "t:options.fade"
        },
        {
          "value": "slide",
          "label": "t:options.slide"
        },
        {
          "value": "zoom",
          "label": "t:options.zoom"
        }
      ],
      "default": "fade"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "label": "t:settings.animation_speed",
      "min": 0,
      "max": 3,
      "step": 0.1,
      "unit": "s",
      "default": 0.5
    },
    {
      "type": "header",
      "content": "t:content.section_layout"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:settings.top_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:settings.bottom_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "heading": "Welcome to Our Store",
        "subheading": "Discover amazing products"
      }
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .hero-banner {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
{% endstylesheet %}

