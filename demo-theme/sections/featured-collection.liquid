<div class="featured-collection">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="product-grid product-grid--{{ section.settings.columns_desktop }}">
    {% comment %} Product grid goes here {% endcomment %}
  </div>
</div>

{% schema %}
{
  "name": "t:names.featured_collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "Featured Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Desktop Columns",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "t:settings.show_border",
      "default": true
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "t:settings.border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 8,
      "visible_if": "{{ section.settings.show_border == true }}"
    },
    {
      "type": "header",
      "content": "t:content.spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:settings.top_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 28
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:settings.bottom_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 28
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

