[
  {
    "name": "theme_info",
    "theme_name": "Demo Theme",
    "theme_version": "1.0.0",
    "theme_author": "Your Name",
    "theme_documentation_url": "https://example.com/docs",
    "theme_support_url": "https://example.com/support"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#008060",
        "info": "Used for buttons, links, and accents"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "default": "#005bd3",
        "info": "Used for secondary actions"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#202223"
      },
      {
        "type": "color_background",
        "id": "color_background",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Status Colors"
      },
      {
        "type": "color",
        "id": "color_success",
        "label": "Success Color",
        "default": "#00a047"
      },
      {
        "type": "color",
        "id": "color_error",
        "label": "Error Color",
        "default": "#d82c0d"
      },
      {
        "type": "color",
        "id": "color_warning",
        "label": "Warning Color",
        "default": "#ffc453"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading Font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "font_heading_size",
        "label": "Heading Font Size",
        "min": 16,
        "max": 48,
        "step": 2,
        "unit": "px",
        "default": 32
      },
      {
        "type": "range",
        "id": "font_heading_weight",
        "label": "Heading Font Weight",
        "min": 300,
        "max": 900,
        "step": 100,
        "default": 600
      },
      {
        "type": "header",
        "content": "Body Text"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body Font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "font_body_size",
        "label": "Body Font Size",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "line_height",
        "label": "Line Height",
        "min": 1.0,
        "max": 2.0,
        "step": 0.1,
        "default": 1.5
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container"
      },
      {
        "type": "range",
        "id": "container_width",
        "label": "Container Max Width",
        "min": 960,
        "max": 1440,
        "step": 20,
        "unit": "px",
        "default": 1200
      },
      {
        "type": "range",
        "id": "container_padding",
        "label": "Container Padding",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 20
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "section_spacing",
        "label": "Section Spacing",
        "min": 0,
        "max": 200,
        "step": 8,
        "unit": "px",
        "default": 80
      },
      {
        "type": "range",
        "id": "element_spacing",
        "label": "Element Spacing",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 24
      },
      {
        "type": "header",
        "content": "Border Radius"
      },
      {
        "type": "range",
        "id": "border_radius_small",
        "label": "Small Border Radius",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "default": 4
      },
      {
        "type": "range",
        "id": "border_radius_large",
        "label": "Large Border Radius",
        "min": 0,
        "max": 50,
        "step": 2,
        "unit": "px",
        "default": 8
      }
    ]
  },
  {
    "name": "Product Grid",
    "settings": [
      {
        "type": "range",
        "id": "products_per_row_desktop",
        "label": "Products Per Row (Desktop)",
        "min": 2,
        "max": 6,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "products_per_row_mobile",
        "label": "Products Per Row (Mobile)",
        "min": 1,
        "max": 2,
        "step": 1,
        "default": 2
      },
      {
        "type": "checkbox",
        "id": "product_grid_hover_effect",
        "label": "Enable Hover Effects",
        "default": true
      },
      {
        "type": "select",
        "id": "product_image_ratio",
        "label": "Product Image Ratio",
        "options": [
          { "value": "square", "label": "Square (1:1)" },
          { "value": "portrait", "label": "Portrait (2:3)" },
          { "value": "landscape", "label": "Landscape (3:2)" }
        ],
        "default": "square"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show Vendor Name",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_product_rating",
        "label": "Show Product Rating",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart Type",
        "options": [
          { "value": "drawer", "label": "Drawer" },
          { "value": "page", "label": "Page" },
          { "value": "popup", "label": "Popup" }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable Cart Notes",
        "default": true
      },
      {
        "type": "text",
        "id": "cart_empty_message",
        "label": "Empty Cart Message",
        "default": "Your cart is currently empty."
      },
      {
        "type": "url",
        "id": "cart_continue_shopping_url",
        "label": "Continue Shopping URL"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Links"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "placeholder": "https://facebook.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "placeholder": "https://instagram.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "placeholder": "https://twitter.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "placeholder": "https://youtube.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "placeholder": "https://tiktok.com/@yourstore"
      },
      {
        "type": "header",
        "content": "Sharing Options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_products",
        "label": "Enable Product Sharing",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable Blog Post Sharing",
        "default": true
      }
    ]
  }
]

